<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dinar.myproject.ui.SplashFragment">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dinar.myproject.ui.auth.LoginFragment">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dinar.myproject.ui.auth.RegisterFragment">
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dinar.myproject.ui.main.HomeFragment" />

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.dinar.myproject.ui.main.AnalyticsFragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dinar.myproject.ui.main.SettingsFragment" />

    <fragment
        android:id="@+id/addTxFragment"
        android:name="com.dinar.myproject.ui.main.AddTxFragment" />

    <fragment
        android:id="@+id/txListFragment"
        android:name="com.dinar.myproject.ui.main.TxListFragment" />

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.dinar.myproject.ui.main.CategoriesFragment" />

</navigation>
